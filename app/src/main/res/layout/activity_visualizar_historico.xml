<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".historico.gui.VisualizarHistoricoActivity">


        <TextView
            android:id="@+id/tvNomeEmpresaVizualizarHistorico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome da empresa"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tvDataCompraVizualizarHistorico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data da compra"
            android:gravity="center"
            android:textSize="20dp"/>

        <View
            android:id="@+id/vwCPF"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="@color/goiaba"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="CPF: "
            android:gravity="center"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvCpfVisualizarHistorico"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:gravity="center"
            android:text="CPF"
            android:textSize="20dp" />

    </RelativeLayout>
         <View
            android:id="@+id/vwCNPJ"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/goiaba"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="CNPJ: "
            android:gravity="center"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvCnpjVisualizarHistorico"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:gravity="center"
            android:text="CNPJ"
            android:textSize="20dp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerHistoricoCompraProdutos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="16dp" />

</LinearLayout>